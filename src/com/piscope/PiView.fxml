<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.chart.NumberAxis?>
<?import org.gillius.jfxutils.chart.StableTicksAxis?>

	
<BorderPane prefHeight="-1.0" prefWidth="-1.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.piscope.PiController">
	<!-- TODO Add Nodes -->
	
	<!-- This node displays LineChart -->
	<center>
      <LineChart fx:id="PiChart" alternativeColumnFillVisible="false" alternativeRowFillVisible="false" animated="true" horizontalGridLinesVisible="true" legendVisible="false" minHeight="400.0" minWidth="600.0" title="PiScope Demo" BorderPane.alignment="CENTER">
        <xAxis>
          <StableTicksAxis   animated="true" forceZeroInRange="false" side="BOTTOM" fx:id="xAxis" />
        </xAxis>
        <yAxis>
          <StableTicksAxis    fx:id="yAxis" animated="true" side="LEFT" />
        </yAxis>
      </LineChart>
   </center>
   
   <!-- This node displays Measurement Info and Instructions -->
   <bottom>
    <VBox prefHeight="-1.0" prefWidth="-1.0">
      <children>
        <Label fx:id="xyValues" text="Measured Values :" />
            <Label fx:id="measurement" text="Mesurement: " />
            <Label fx:id="instructions" text="Instructions">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <ListView fx:id="instructionList" prefHeight="200.0" prefWidth="253.0" />
      </children>
    </VBox>
  </bottom>
	
</BorderPane>


